<odoo>

  <record id="care_card_view_form" model="ir.ui.view">
    <field name="name">Care Card.form</field>
    <field name="model">care_card</field>
    <field name="arch" type="xml">
      <form>
        <header> 
          <button class="btn btn-success" name="make_activated_it" string="Activated" type="object" attrs="{'invisible': [('status', '=', 'activated')]}" />
          <button class="btn btn-danger" name="make_canceled_it" string="Canceled"  type="object" attrs="{'invisible': [('status', '=', 'canceled')]}"/>
          <field name="status" widget="statusbar"/>
        </header>
        <sheet>
          <div class="oe_title">
            <h1>
                <field name="card_number" readonly="1"/>
            </h1>
          </div>
          <group name="sale_header">
            <group>
              <field name="beneficiary" />
              <field name="expired_date" />
              <field name="card_date"  attrs="{'readonly': [('card_date','!=', False)]}" />
            </group>
            <group>
              <field name="company_currency" invisible='1'  />
              <field name="card_balance" />
              <field name="note"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>
  <record id="care_card_view_tree" model="ir.ui.view">
    <field name="name">Care Card.tree</field>
    <field name="model">care_card</field>
    <field name="arch" type="xml">
      <tree>
        <field name="beneficiary" />
        <field name="card_number" />
        <field name="company_currency" invisible='1' />
        <field name="card_balance" />
        <field name="status" widget="badge"  decoration-success="status == 'activated'"  decoration-danger="status == 'canceled'" optional='expired' /> 
        <button class="btn btn-success" name="make_activated_it"  type="object" string="Activated" attrs="{'invisible': [('status','=', 'activated')]}" />
        <button class="btn btn-danger" name="make_canceled_it"  type="object" string="Canceled" attrs="{'invisible': [('status','=', 'canceled')]}" />
      </tree>
    </field>
  </record>

  <record id="care_card_view_kanban" model="ir.ui.view">
    <field name="name">Care Card Kanban</field>
    <field name="model">care_card</field>
    <field name="arch" type="xml">
      <kanban default_group_by="status">
        <field name="beneficiary" />
        <field name="card_number" />
        <field name="company_currency" invisible='1' />
        <field name="card_balance" />
        <field name="status" />
        <field name="expired_date" />
        <templates>
            <t t-name="kanban-box">
                <div class="oe_kanban_global_click">
                    <div class="oe_kanban_content">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_image" >
                              <img t-att-src="kanban_image('product.template','image_small')"/>
                            </div>
                            <div>
                                <i class="fa fa-user-circle"/>
                                <b>
                                  <field name="beneficiary" />
                                </b>
                            </div>
                            
                            <div class="text-muted">
                                <i class="fa fa-credit-card"/>
                                <field name="card_number" />
                            </div>
                            <div class="text-muted">
                              <i class="fa fa-money"/>
                              <field name="card_balance" />
                          </div>
                            <div class="text-muted">
                              <i class="fa fa-calendar"/>
                              <field name="expired_date" />
                           </div>
                        </div>
                    </div>
                </div>
            </t>
        </templates>
      </kanban>
    </field>
  </record>
  <record  model="ir.actions.act_window" id="care_card_list_action">
    <field name="name">Care Card</field>
    <field name="res_model">care_card</field>
    <field name = "help" type="html">
      <p class = "o_view_nocontent_smiling_face">Create the first Care Card</p>
    </field>
    <field name = "view_mode">kanban,tree,form</field>
  </record>

  <menuitem id="care_card_menu_do_stuff" name="Care Card"/>
  <menuitem id="card_menu_do_stuff" name="Card" parent="care_card_menu_do_stuff"/>
  <menuitem id="create_card_menu_do_stuff"  name="Create Card" action="care_card_list_action" parent="card_menu_do_stuff" sequence="1" />

</odoo>