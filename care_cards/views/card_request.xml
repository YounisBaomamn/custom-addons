<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="request_card_view_form" model="ir.ui.view">
        <field name="name">request.form</field>
        <field name="model">card_request</field>
        <field name="arch" type="xml">
        <form>
          <header> 
            <button class="btn btn-success" name="approved_it"  type="object" string="Approved" attrs="{'invisible': [('request_status','!=', 'pending')]}" />
            <button class="btn btn-danger" name="rejected_it"  type="object" string="Rejected" attrs="{'invisible': [('request_status','!=', 'pending')]}" />
            <field name="request_status" widget="statusbar" />
          </header>
          <sheet>
            <div class="oe_title">
              <h1>
                  <field name="request_number" readonly="1"/>
              </h1>
            </div>
            <group name="sale_header">
              <group>
                <field name="name" />
                <field name="request_data"  attrs="{'readonly': [('request_data','!=', False)]}" />
                <field name="email" />
              </group>
              <group>
                <field name="company_currency" invisible='1'  />
                <field name="card_balance" />
                <field name="note" />
                <field name="document_ids" widget="many2many_binary"   />
              </group>
            </group>
          </sheet>
        </form>
        </field>
    </record>

    <record id="request_card_view_tree" model="ir.ui.view">
        <field name="name">request.tree</field>
        <field name="model">card_request</field>
        <field name="arch" type="xml">
          <tree>
              <field name="name" />
              <field name="request_number" />
              <field name="company_currency" invisible='1' />
              <field name="card_balance" />
              <field name="request_status" widget="badge"  decoration-success="request_status == 'approved'"  decoration-danger="request_status == 'rejected'" decoration-warning="request_status == 'pending'"/> 
              <button class="btn btn-success" name="approved_it"  type="object" string="Approved" attrs="{'invisible': [('request_status','!=', 'pending')]}" />
              <button class="btn btn-danger" name="rejected_it"  type="object" string="Rejected" attrs="{'invisible': [('request_status','!=', 'pending')]}" />
          </tree>
        </field>
    </record>

    <record id="request_view_kanban" model="ir.ui.view">
      <field name="name">Rent Kanban</field>
      <field name="model">card_request</field>
      <field name="arch" type="xml">
        <kanban default_group_by="request_status">
          <field name="name" />
          <field name="request_number" />
          <field name="request_status"  />
          <field name="company_currency" invisible='1' />
          <field name="card_balance" />
          <templates>
              <t t-name="kanban-box">
                <div class="oe_kanban_global_click">
                  <div class="oe_kanban_content">
                    <div class="oe_kanban_card">
                      <div class="o_kanban_image" >
                        <img t-att-src="kanban_image('product.template','image_small')"/>
                      </div>
                      <div>
                        <i class="fa fa-user-circle"/>
                        <b>
                          <field name="name" />
                        </b>
                      </div>
                      <div class="text-muted">
                          <i class="fa fa-credit-card"/>
                          <field name="request_number" />
                      </div>
                      <div class="text-muted">
                        <i class="fa fa-money"/>
                        <field name="card_balance" />
                      </div>
                      <div class="text-muted">
                        <i class="fa fa-calendar"/>
                        <field name="request_data" />
                      </div>
                    </div>
                  </div>
                </div>
              </t>
          </templates>
        </kanban>
      </field>
    </record>
  
    <record  model="ir.actions.act_window" id="request_list_action">
        <field name="name">Card Request</field>
        <field name="res_model">card_request</field>
        <field name = "help" type="html">
            <p class = "o_view_nocontent_smiling_face">Create the Card Request</p>
        </field>
        <field name = "view_mode">kanban,tree,form</field>
    </record>
   
    
    <menuitem id="request_card_menu" name="Card Request"  parent="menu_request_card_menu" action = "request_list_action" sequence="1" />

</odoo>
