<?xml version='1.0' encoding='utf-8'?>
<odoo>
  <data >
    <record id="sending_request_email_template" model="mail.template">
      <field name="model_id" ref="care_cards.model_card_request"/>
      <field name="name">Sending Request Email</field>
      <field name="email_from">${object.name}</field>
      <field name="subject">Sending Request Email</field>
      <field name="email_to">${object.email}</field>
      <field name="body_html" >
        <![CDATA[
         <h1>Dear ${(object.name)}</h1>
	       <p>Your card has been successfully activated</p> <br/>
         <h3>Your card Info is: </h3>
         Phone : ${object.phone}
         <br/>
         Card Balance : ${object.card_balance}
        ]]>
      </field>
       </record>
  </data>
</odoo>